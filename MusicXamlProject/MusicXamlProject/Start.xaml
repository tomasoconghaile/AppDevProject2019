<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicXamlProject.Start"
             BackgroundColor="Navy">
    <ContentPage.Content>
        <StackLayout Margin="5">

            <Label Text="Welcome To The Musical Instruments App For Kids!"
                FontSize="Large" FontFamily="TimesNewRoman" TextColor="Red"  />
            <Image Source="start.jpg" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                   WidthRequest="600"
                   HeightRequest="450"
            />

            <Button BorderRadius="20" Text="Begin"
                    FontSize="Large" TextColor="Navy" BackgroundColor="White"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Clicked="Button_ClickedStart"></Button>
            
            
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>